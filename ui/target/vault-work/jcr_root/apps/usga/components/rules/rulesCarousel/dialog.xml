<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sectionTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Title"
                        name="./sectionTitle"
                        xtype="textfield"/>
                <sectionDescription
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Description"
                        name="./sectionDescription"
                        xtype="textarea"/>
                <sponsorText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sponsor Text"
                        name="./sponsorText"
                        xtype="textfield"/>
                <sponsorLogo
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sponsor Logo"
                        name="./sponsorLogo"
                        predicate="nosystem"
                        rootPath="/content/dam/usga"
                        width="{Long}50"
                        xtype="pathfield">
                    <treeRoot
                            jcr:primaryType="nt:unstructured"
                            name="content/dam/usga"
                            text="Media Assets"/>
                </sponsorLogo>
                <moreLinkLabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="More Link Label"
                        name="./moreLinkLabel"
                        xtype="textfield"/>
                <moreLinkDestination
                        jcr:primaryType="cq:Widget"
                        fieldLabel="More Link Destination"
                        name="./moreLinkDestination"
                        xtype="pathfield"/>
                <newWindow
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open More Link in a new window"
                        defaultValue="no"
                        boxMaxWidth="{Long}200"
                        name="./newWindow"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="yes"/>
                        <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="no"/>
                    </options>
                </newWindow>
                <multifield
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./slides"
                        hideLabel="false"
                        fieldLabel="Slides"
                        name="./slides"
                        xtype="custommultifield">
                    <fieldConfig jcr:primaryType="cq:WidgetCollection">
                        <background
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Background Image"
                                name="./background"
                                predicate="nosystem"
                                rootPath="/content/dam/usga"
                                width="{Long}50"
                                xtype="pathfield">
                            <treeRoot
                                    jcr:primaryType="nt:unstructured"
                                    name="content/dam/usga"
                                    text="Media Assets"/>
                        </background>
                        <ruleTitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Rule Title"
                                name="./ruleTitle"
                                xtype="textfield"/>
                        <ruleReference
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Rule Reference"
                                name="./ruleReference"
                                xtype="textfield"/>
                        <destination
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Slide destination"
                                name="./destination"
                                xtype="pathfield"/>
                        <slideNewWindow
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open rule page in a new window"
                                defaultValue="no"
                                boxMaxWidth="{Long}200"
                                name="./slideNewWindow"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                            </options>
                        </slideNewWindow>
                    </fieldConfig>
                </multifield>
            </items>
        </tab>
    </items>
</jcr:root>