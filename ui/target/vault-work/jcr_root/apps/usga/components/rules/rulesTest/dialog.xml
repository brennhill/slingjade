<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <testTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Test Title"
                        name="./testTitle"
                        xtype="textfield"/>
                <testTask
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Test task"
                        name="./testTask"
                        xtype="textarea"/>
                <multifield
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./tests"
                        hideLabel="false"
                        fieldLabel="Tests"
                        name="./tests"
                        xtype="custommultifield">
                    <fieldConfig jcr:primaryType="cq:WidgetCollection">
                        <variant
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Variant"
                                name="./variant"
                                xtype="textfield"/>
                    </fieldConfig>
                </multifield>
            </items>
        </tab>
    </items>
</jcr:root>