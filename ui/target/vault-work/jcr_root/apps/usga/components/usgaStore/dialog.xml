<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sectionTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Title"
                        name="./sectionTitle"
                        xtype="textfield"/>
                <sectionDescription
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Description"
                        name="./sectionDescription"
                        xtype="textarea"/>
                <smallScreenText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Small Screen Text"
                        name="./smallScreenText"
                        xtype="textfield"/>
                <smallScreenLinkDest
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Small Screen Link Destination"
                        name="./smallScreenLinkDest"
                        xtype="textfield"/>
                <multifield
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./products"
                        hideLabel="false"
                        fieldLabel="Products"
                        name="./products"
                        xtype="custommultifield">
                    <fieldConfig jcr:primaryType="cq:WidgetCollection">
                        <productImage
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                fieldLabel="Product Image"
                                name="./productImage"
                                predicate="nosystem"
                                rootPath="/content/dam/usga"
                                width="{Long}50"
                                xtype="pathfield">
                            <treeRoot
                                    jcr:primaryType="nt:unstructured"
                                    name="content/dam/usga"
                                    text="Media Assets"/>
                        </productImage>
                        <productTitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Product Category Title"
                                name="./productTitle"
                                xtype="textfield"/>
                        <categoryDestination
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Linked Category Page"
                                name="./categoryDestination"
                                xtype="pathfield"/>
                        <categoryNewWindow
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open Linked Category Page in a new window"
                                defaultValue="no"
                                boxMaxWidth="{Long}200"
                                name="./categoryNewWindow"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                            </options>
                        </categoryNewWindow>
                    </fieldConfig>
                </multifield>
            </items>
        </tab>
    </items>
</jcr:root>