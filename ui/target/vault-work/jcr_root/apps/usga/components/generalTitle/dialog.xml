<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title: "
                        name="./title"
                        xtype="textfield"/>
                <titleUnder
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title under: "
                        name="./titleUnder"
                        xtype="textfield"/>
                <sponsorIcon
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sponsor Icon: "
                        rootPath="/content/dam"
                        name="./sponsorIcon"
                        xtype="pathfield"/>
                <sponsorLink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sponsor Link: "
                        name="./sponsorLink"
                        rootPath="/content"
                        xtype="pathfield"/>
                <hideUnderline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide underline"
                        name="./hideUnderline"
                        xtype="selection"
                        type="checkbox"/>
            </items>
        </tab>
    </items>
</jcr:root>