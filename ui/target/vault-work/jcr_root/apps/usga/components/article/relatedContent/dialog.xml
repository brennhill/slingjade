<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          width="750"
          height="700"
          xtype="dialog">
    <items
            jcr:primaryType="nt:unstructured"
            title="Related Content Configuration"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <module_title
                    jcr:primaryType="cq:Widget"
                    title="Section Title"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Section Title:"
                            name="./sectionTitle"
                            xtype="textfield"/>
                    <contentSelection
                            jcr:primaryType="cq:Widget"
                            defaultValue="false"
                            fieldLabel="Content Determination Selection"
                            name="./contentSelection"
                            type="radio"
                            xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <auto
                                    text="Automatically"
                                    jcr:primaryType="nt:unstructured"
                                    value="true"/>
                            <manual
                                    text="Manually"
                                    jcr:primaryType="nt:unstructured"
                                    value="false"/>
                        </options>
                    </contentSelection>
                    <numItems
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Number of items"
                            fieldDescription="*For auto mode only. 4 by default "
                            allowNegative="${Boolean}false"
                            name="./numItems"
                            xtype="numberfield"/>
                    <rootPathArticle
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Articles root folder: "
                            name="./rootPathArticle"
                            xtype="pathfield"/>
                    <rootPathPhoto
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Photos root folder: "
                            name="./rootPathPhoto"
                            xtype="pathfield"/>
                    <rootPathVideo
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Videos root folder: "
                            name="./rootPathVideo"
                            xtype="pathfield"/>
                    <boxes
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Items"
                            name="./boxes"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <pagePath
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Path to article page: "
                                        width="350"
                                        key="pagePath"
                                        xtype="pathfield">
                                </pagePath>
                            </items>
                        </fieldConfig>
                    </boxes>
                </items>
            </module_title>
        </items>
    </items>
</jcr:root>
