<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          height="800"
          width="800"
          xtype="dialog">
    <items
            jcr:primaryType="nt:unstructured"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <options
                    jcr:primaryType="cq:Widget"
                    title="Settings"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <sectionTitle
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Section Title: "
                            allowBlank="{Boolean}false"
                            name="./sectionTitle"
                            xtype="textfield"/>
                    <media
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Image path: "
                            allowBlank="{Boolean}false"
                            name="./media"
                            rootPath="/content/dam/usga"
                            xtype="pathfield"/>
                    <isVideoContent
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Is video content: "
                            name="./isVideoContent"
                            xtype="checkbox"/>
                    <link
                            jcr:primaryType="cq:Widget"
                            width="300"
                            fieldLabel="Media Link URL:"
                            name="./link"
                            xtype="pathfield"/>
                    <linkTarget jcr:primaryType="cq:Widget"
                                fieldLabel="Open: "
                                boxMaxWidth="{Long}300"
                                defaultValue="false"
                                name="./linkTarget"
                                width="300"
                                type="select"
                                xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self jcr:primaryType="nt:unstructured"
                                  text="current window"
                                  value="_self"/>
                            <blank jcr:primaryType="nt:unstructured"
                                   text="new window"
                                   value="_blank"/>
                        </options>
                    </linkTarget>
                    <textlinks
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Text Links"
                            name="./textlinks"
                            maxItems="{Long}3"
                            fieldDescription="max items = 3"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <linkText
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="Link Text:"
                                        key="linkText"
                                        xtype="textfield"/>
                                <linkUrl
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="Link URL:"
                                        key="linkUrl"
                                        xtype="pathfield"/>
                                <linkTarget jcr:primaryType="cq:Widget"
                                             fieldLabel="Open: "
                                             boxMaxWidth="{Long}300"
                                             defaultValue="false"
                                             key="linkTarget"
                                             width="300"
                                             type="select"
                                             xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self jcr:primaryType="nt:unstructured"
                                                   text="current window"
                                                   value="_self"/>
                                        <blank jcr:primaryType="nt:unstructured"
                                                        text="new window"
                                                        value="_blank"/>
                                    </options>
                                </linkTarget>
                            </items>
                        </fieldConfig>
                    </textlinks>
                    <ctalinks
                            jcr:primaryType="cq:Widget"
                            fieldLabel="CTA Links"
                            name="./ctalinks"
                            maxItems="{Long}2"
                            fieldDescription="max items = 2"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <ctaText
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="CTA Text:"
                                        key="ctaText"
                                        xtype="textfield"/>
                                <ctaUrl
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="CTA URL:"
                                        key="ctaUrl"
                                        xtype="pathfield"/>
                                <ctaTarget jcr:primaryType="cq:Widget"
                                            fieldLabel="Open: "
                                            boxMaxWidth="{Long}300"
                                            defaultValue="false"
                                            key="ctaTarget"
                                            width="300"
                                            type="select"
                                            xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self jcr:primaryType="nt:unstructured"
                                              text="current window"
                                              value="_self"/>
                                        <blank jcr:primaryType="nt:unstructured"
                                               text="new window"
                                               value="_blank"/>
                                    </options>
                                </ctaTarget>
                            </items>
                        </fieldConfig>
                    </ctalinks>
                </items>
            </options>
        </items>
    </items>
</jcr:root>
