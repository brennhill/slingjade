<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          height="900"
          width="1000"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sliders
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Slides"
                        name="./sliders"
                        orderable="{Boolean}true"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <year
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Year: "
                                    key="year"
                                    allowBlank="{Boolean}false"
                                    width="400"
                                    xtype="textfield"/>
                            <background
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Background: "
                                    key="background"
                                    allowBlank="{Boolean}false"
                                    predicate="nosystem"
                                    rootPath="/content/dam/usga"
                                    width="400"
                                    xtype="pathfield">
                                <treeRoot
                                        jcr:primaryType="nt:unstructured"
                                        name="content/dam/usga"
                                        text="Media Assets"/>
                            </background>
                            <logo
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Logo: "
                                    key="logo"
                                    predicate="nosystem"
                                    rootPath="/content/dam/usga"
                                    width="400"
                                    xtype="pathfield">
                                <treeRoot
                                        jcr:primaryType="nt:unstructured"
                                        name="content/dam/usga"
                                        text="Media Assets"/>
                            </logo>
                            <roundedLogo jcr:primaryType="cq:Widget"
                                         fieldLabel="Rounded logo: "
                                         defaultValue="no"
                                         boxMaxWidth="{Long}200"
                                         key="roundedLogo"
                                         allowBlank="{Boolean}false"
                                         width="300"
                                         type="select"
                                         xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <yes jcr:primaryType="nt:unstructured"
                                               text="yes"
                                               value="yes"/>
                                    <no jcr:primaryType="nt:unstructured"
                                                    text="no"
                                                    value="no"/>
                                </options>
                            </roundedLogo>
                            <title
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Title: "
                                    key="title"
                                    allowBlank="{Boolean}false"
                                    width="400"
                                    xtype="textfield"/>
                            <location
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Location: "
                                    key="location"
                                    width="400"
                                    xtype="textfield"/>
                            <date
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Date: "
                                    key="date"
                                    width="400"
                                    xtype="textfield"/>
                            <sliderType1 jcr:primaryType="cq:Widget"
                                         fieldLabel="#1 Slide Type: "
                                         defaultValue="no"
                                         boxMaxWidth="{Long}200"
                                         key="sliderType1"
                                         allowBlank="{Boolean}false"
                                         width="300"
                                         type="select"
                                         xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <ticketBox jcr:primaryType="nt:unstructured"
                                               text="Ticket Links Box"
                                               value="ticketBox"/>
                                    <hospitalityBox jcr:primaryType="nt:unstructured"
                                                    text="Hospitality Link Box"
                                                    value="hospitalityBox"/>
                                    <informationBox jcr:primaryType="nt:unstructured"
                                                    text="Latest Ticket Information Box"
                                                    value="informationBox"/>
                                </options>
                            </sliderType1>
                            <sliderType2 jcr:primaryType="cq:Widget"
                                         fieldLabel="#2 Slide Type: "
                                         defaultValue="no"
                                         boxMaxWidth="{Long}200"
                                         key="sliderType2"
                                         width="300"
                                         type="select"
                                         xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <ticketBox jcr:primaryType="nt:unstructured"
                                               text="Ticket Links Box"
                                               value="ticketBox"/>
                                    <hospitalityBox jcr:primaryType="nt:unstructured"
                                                    text="Hospitality Link Box"
                                                    value="hospitalityBox"/>
                                    <informationBox jcr:primaryType="nt:unstructured"
                                                    text="Latest Ticket Information Box"
                                                    value="informationBox"/>
                                </options>
                            </sliderType2>
                            <sliderType3 jcr:primaryType="cq:Widget"
                                         fieldLabel="#3 Slide Type: "
                                         defaultValue="no"
                                         boxMaxWidth="{Long}200"
                                         key="sliderType3"
                                         width="300"
                                         type="select"
                                         xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <ticketBox jcr:primaryType="nt:unstructured"
                                               text="Ticket Links Box"
                                               value="ticketBox"/>
                                    <hospitalityBox jcr:primaryType="nt:unstructured"
                                                    text="Hospitality Link Box"
                                                    value="hospitalityBox"/>
                                    <informationBox jcr:primaryType="nt:unstructured"
                                                    text="Latest Ticket Information Box"
                                                    value="informationBox"/>
                                </options>
                            </sliderType3>
                        </items>
                    </fieldConfig>
                </sliders>
            </items>
        </tab>
    </items>
</jcr:root>