<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}660"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <background
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header Background Image"
                        name="./background"
                        predicate="nosystem"
                        rootPath="/content/dam/usga"
                        width="{Long}50"
                        xtype="pathfield">
                    <treeRoot
                            jcr:primaryType="nt:unstructured"
                            name="content/dam/usga"
                            text="Media Assets"/>
                </background>
                <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Title: "
                        name="./title"
                        xtype="textfield"/>
                <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Description: "
                        name="./description"
                        xtype="textfield"/>
                <eventsType
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Events Type"
                        boxMaxWidth="{Long}200"
                        allowBlank="{Boolean}false"
                        name="./eventsType"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <championship
                                jcr:primaryType="nt:unstructured"
                                text="Championship"
                                value="championship"/>
                        <workshops
                                jcr:primaryType="nt:unstructured"
                                text="Workshops"
                                value="workshops"/>
                    </options>
                </eventsType>
                <startYear
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Start Year: "
                        name="./startYear"
                        xtype="textfield"/>
                <endYear
                        jcr:primaryType="cq:Widget"
                        fieldLabel="End Year"
                        name="./endYear"
                        fieldDescription="In order to add a tab with desired year, edit date range above."
                        xtype="textfield"/>
                <defaultYear
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Default Year"
                        name="./defaultYear"
                        xtype="textfield"/>
            </items>
        </tab>
    </items>
</jcr:root>