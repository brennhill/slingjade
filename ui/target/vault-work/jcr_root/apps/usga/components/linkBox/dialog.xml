<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sectionTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Title"
                        name="./sectionTitle"
                        xtype="textfield"/>
                <sectionDescription
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Description"
                        name="./sectionDescription"
                        xtype="textarea"/>
                <linkType
                        jcr:primaryType="cq:Widget"
                        defaultValue="false"
                        fieldLabel="Link type"
                        name="./linkType"
                        type="radio"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <false
                                text="Text Link"
                                jcr:primaryType="nt:unstructured"
                                value="false"/>
                        <true
                                text="Photo Link"
                                jcr:primaryType="nt:unstructured"
                                value="true"/>
                    </options>
                    <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(box,value){var pathfields = box.ownerCt.findByType('pathfield'); if(pathfields[0].name=='./image'){ if(value == 'true'){ pathfields[0].show();} else { pathfields[0].hide(); }}}"/>
                </linkType>
                <image
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link Image"
                        name="./image"
                        predicate="nosystem"
                        rootPath="/content/dam/usga"
                        width="{Long}50"
                        xtype="pathfield">
                    <treeRoot
                            jcr:primaryType="nt:unstructured"
                            name="content/dam/usga"
                            text="Media Assets"/>
                </image>
                <destination
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Link Destination"
                        name="./destination"
                        xtype="pathfield"/>
                <newWindow
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open link in a new window"
                        defaultValue="_self"
                        boxMaxWidth="{Long}200"
                        name="./newWindow"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="_blank"/>
                        <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="_self"/>
                    </options>
                </newWindow>
            </items>
        </tab>
    </items>
</jcr:root>