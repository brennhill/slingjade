<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          height="700"
          width="800"
          xtype="dialog">
    <items
            jcr:primaryType="nt:unstructured"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <options
                    jcr:primaryType="cq:Widget"
                    title="Settings"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <blockitems
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Block Items"
                            name="./blockitems"
                            maxItems="{Long}3"
                            fieldDescription="max items = 3"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <thumbnail
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Thumbnail: "
                                        width="300"
                                        key="thumbnail"
                                        predicate="nosystem"
                                        rootPath="/content/dam/usga"
                                        xtype="pathfield">
                                    <treeRoot
                                            jcr:primaryType="nt:unstructured"
                                            name="content/dam/usga"
                                            text="Media Assets"/>
                                </thumbnail>
                                <text
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="Text:"
                                        key="text"
                                        xtype="textfield"/>
                                <url
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="URL:"
                                        key="url"
                                        xtype="pathfield"/>
                                <target jcr:primaryType="cq:Widget"
                                        fieldLabel="Open: "
                                        boxMaxWidth="{Long}300"
                                        defaultValue="false"
                                        key="target"
                                        width="300"
                                        type="select"
                                        xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self jcr:primaryType="nt:unstructured"
                                              text="current window"
                                              value="_self"/>
                                        <blank jcr:primaryType="nt:unstructured"
                                               text="new window"
                                               value="_blank"/>
                                    </options>
                                </target>
                            </items>
                        </fieldConfig>
                    </blockitems>
                </items>
            </options>
        </items>
    </items>
</jcr:root>
