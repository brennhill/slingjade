<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          height="1000"
          width="800"
          xtype="dialog">
    <items
            jcr:primaryType="nt:unstructured"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <options
                    jcr:primaryType="cq:Widget"
                    title="Settings"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <header
                            jcr:primaryType="cq:Widget"
                            collapsed="false"
                            collapsible="false"
                            title="Header"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <title
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Title: "
                                    name="./title"
                                    allowBlank="{Boolean}false"
                                    xtype="textfield"/>
                            <date
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Date: "
                                    name="./date"
                                    xtype="textfield"/>
                            <description
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Description: "
                                    name="./description"
                                    xtype="textfield"/>
                            <location
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Location: "
                                    name="./location"
                                    xtype="textfield"/>
                            <logo
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Logo: "
                                    name="./logo"
                                    predicate="nosystem"
                                    rootPath="/content/dam/usga"
                                    xtype="pathfield">
                                <treeRoot
                                        jcr:primaryType="nt:unstructured"
                                        name="content/dam/usga"
                                        text="Media Assets"/>
                            </logo>
                        </items>
                    </header>
                    <textlinks
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Text Links"
                            name="./textlinks"
                            maxItems="{Long}6"
                            fieldDescription="max items = 6"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <linkText
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="Link Text:"
                                        key="linkText"
                                        xtype="textfield"/>
                                <linkUrl
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="Link URL:"
                                        key="linkUrl"
                                        xtype="pathfield"/>
                                <linkTarget jcr:primaryType="cq:Widget"
                                             fieldLabel="Open: "
                                             boxMaxWidth="{Long}300"
                                             defaultValue="false"
                                             key="linkTarget"
                                             width="300"
                                             type="select"
                                             xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self jcr:primaryType="nt:unstructured"
                                                   text="current window"
                                                   value="_self"/>
                                        <blank jcr:primaryType="nt:unstructured"
                                                        text="new window"
                                                        value="_blank"/>
                                    </options>
                                </linkTarget>
                            </items>
                        </fieldConfig>
                    </textlinks>
                    <ctalinks
                            jcr:primaryType="cq:Widget"
                            fieldLabel="CTA Links"
                            name="./ctalinks"
                            maxItems="{Long}1"
                            fieldDescription="max items = 1"
                            orderable="{Boolean}true"
                            xtype="multifield">
                        <fieldConfig
                                jcr:primaryType="cq:Widget"
                                xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <ctaText
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="CTA Text:"
                                        key="ctaText"
                                        xtype="textfield"/>
                                <ctaUrl
                                        jcr:primaryType="cq:Widget"
                                        width="300"
                                        fieldLabel="CTA URL:"
                                        key="ctaUrl"
                                        xtype="pathfield"/>
                                <ctaTarget jcr:primaryType="cq:Widget"
                                            fieldLabel="Open: "
                                            boxMaxWidth="{Long}300"
                                            defaultValue="false"
                                            key="ctaTarget"
                                            width="300"
                                            type="select"
                                            xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self jcr:primaryType="nt:unstructured"
                                              text="current window"
                                              value="_self"/>
                                        <blank jcr:primaryType="nt:unstructured"
                                               text="new window"
                                               value="_blank"/>
                                    </options>
                                </ctaTarget>
                            </items>
                        </fieldConfig>
                    </ctalinks>
                </items>
            </options>
        </items>
    </items>
</jcr:root>
