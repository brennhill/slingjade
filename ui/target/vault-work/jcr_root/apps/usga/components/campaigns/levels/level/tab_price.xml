<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Panel"
          title="Price">
    <items jcr:primaryType="cq:WidgetCollection">
        <price jcr:primaryType="cq:Widget"
               fieldLabel="Individual"
               name="./price"
               allowBlank="{Boolean}false"
               xtype="numberfield"/>
        <priceHint jcr:primaryType="cq:Widget"
                   name="./price@TypeHint"
                   ignoreData="{Boolean}true"
                   value="Decimal"
                   xtype="hidden"/>
        <priceDual jcr:primaryType="cq:Widget"
                   fieldLabel="Dual"
                   name="./priceDual"
                   allowBlank="{Boolean}false"
                   xtype="numberfield"/>
        <priceDualHint jcr:primaryType="cq:Widget"
                       name="./priceDual@TypeHint"
                       ignoreData="{Boolean}true"
                       value="Decimal"
                       xtype="hidden"/>
    </items>
</jcr:root>
