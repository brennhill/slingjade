<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          height="{Long}750"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab jcr:primaryType="cq:Widget"
             hideMode="offsets"
             xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <channels
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Social Channels"
                        name="./channels"
                        orderable="{Boolean}true"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <linkName
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Link Name"
                                    key="linkName"
                                    width="300"
                                    xtype="textfield"/>
                            <linkDestination
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Link Destination"
                                    key="linkDestination"
                                    width="300"
                                    xtype="pathfield"/>
                            <newWindow
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Open link in a new window"
                                    defaultValue="no"
                                    boxMaxWidth="{Long}200"
                                    key="newWindow"
                                    type="select"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <yes
                                            jcr:primaryType="nt:unstructured"
                                            text="Yes"
                                            value="_blank"/>
                                    <no
                                            jcr:primaryType="nt:unstructured"
                                            text="No"
                                            value="_self"/>
                                </options>
                            </newWindow>
                        </items>
                    </fieldConfig>
                </channels>
            </items>
        </tab>
    </items>
</jcr:root>