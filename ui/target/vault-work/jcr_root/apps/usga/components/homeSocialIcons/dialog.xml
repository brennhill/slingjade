<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <gPlus
                        jcr:primaryType="cq:Widget"
                        collapsed="false"
                        collapsible="false"
                        title="Google+"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <gPlusLink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Google+ Link: "
                                name="./gPlusLink"
                                xtype="pathfield"
                                rootPath="/content"/>
                        <hideGPlus
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hide Google+ Icon: "
                                name="./hideGPlus"
                                xtype="selection"
                                type="checkbox"/>
                    </items>
                </gPlus>
                <twitter
                        jcr:primaryType="cq:Widget"
                        collapsed="false"
                        collapsible="false"
                        title="Twitter"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <twitterLink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Twitter Link: "
                                name="./twitterLink"
                                xtype="pathfield"
                                rootPath="/content"/>
                        <hideTwitter
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hide Twitter Icon: "
                                name="./hideTwitter"
                                xtype="selection"
                                type="checkbox"/>
                    </items>
                </twitter>
                <facebook
                        jcr:primaryType="cq:Widget"
                        collapsed="false"
                        collapsible="false"
                        title="Facebook"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <facebookLink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Facebook Link: "
                                name="./facebookLink"
                                xtype="pathfield"
                                rootPath="/content"/>
                        <hideFacebook
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hide Facebook Icon: "
                                name="./hideFacebook"
                                xtype="selection"
                                type="checkbox"/>
                    </items>
                </facebook>
                <instagram
                        jcr:primaryType="cq:Widget"
                        collapsed="false"
                        collapsible="false"
                        title="Instagram"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <instagramLink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Instagram Link: "
                                name="./instagramLink"
                                xtype="pathfield"
                                rootPath="/content"/>
                        <hideInstagram
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hide Instagram Icon: "
                                name="./hideInstagram"
                                xtype="selection"
                                type="checkbox"/>
                    </items>
                </instagram>
            </items>
        </tab>
    </items>
</jcr:root>