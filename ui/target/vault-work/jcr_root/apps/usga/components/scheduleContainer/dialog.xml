<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="700"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sectionTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Title: "
                        name="./sectionTitle"
                        xtype="textfield"/>
                <sectionDescription
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Description: "
                        name="./sectionDescription"
                        xtype="textarea"/>
                <sponsor
                        jcr:primaryType="cq:Widget"
                        collapsed="false"
                        collapsible="false"
                        title="Partner section"
                        xtype="dialogfieldset">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <sponsorText
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Partner Text: "
                                name="./sponsorText"
                                xtype="textfield"/>
                        <sponsorLogo
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Partner Logo: "
                                name="./sponsorLogo"
                                predicate="nosystem"
                                rootPath="/content/dam/usga"
                                width="{Long}50"
                                xtype="pathfield">
                            <treeRoot
                                    jcr:primaryType="nt:unstructured"
                                    name="content/dam/usga"
                                    text="Media Assets"/>
                        </sponsorLogo>
                        <link
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Partner Link: "
                                name="./logolink"
                                xtype="pathfield"
                                rootPath="/content"/>
                        <linkTarget jcr:primaryType="cq:Widget"
                                    fieldLabel="Open: "
                                    boxMaxWidth="{Long}300"
                                    defaultValue="_self"
                                    name="./logoLinkTarget"
                                    type="select"
                                    xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <self jcr:primaryType="nt:unstructured"
                                      text="current window"
                                      value="_self"/>
                                <blank jcr:primaryType="nt:unstructured"
                                       text="new window"
                                       value="_blank"/>
                            </options>
                        </linkTarget>
                        <noSponsor
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hide partner: "
                                name="./noSponsor"
                                type="checkbox"
                                xtype="selection"/>
                    </items>
                </sponsor>
            </items>
        </tab>
    </items>
</jcr:root>