<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Dialog"
          width="800"
          height="900"
          xtype="dialog">
    <items
            jcr:primaryType="nt:unstructured"
            title="Event Details Configuration"
            xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settings
                    jcr:primaryType="cq:Widget"
                    title="Event Details Configuration"
                    xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <header
                            jcr:primaryType="cq:Widget"
                            collapsed="false"
                            collapsible="false"
                            title="Header settings"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <pageTitle
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Page Title:"
                                    name="./pageTitle"
                                    xtype="textfield"/>
                            <pageDescription
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Page Description:"
                                    name="./pageDescription"
                                    xtype="textfield"/>
                            <sectionTitle
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Section Title:"
                                    name="./sectionTitle"
                                    xtype="textfield"/>
                            <bgImage
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Background:"
                                    rootPath="/content/dam/usga"
                                    name="./bgImage"
                                    xtype="pathfield"/>
                        </items>
                    </header>
                    <title
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Title:"
                            name="./title"
                            xtype="textfield"/>
                    <location
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Location:"
                            name="./location"
                            xtype="textfield"/>
                    <image
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Image:"
                            rootPath="/content/dam/usga"
                            name="./image"
                            xtype="pathfield"/>
                    <isMemberExclusive
                            jcr:primaryType="cq:Widget"
                            defaultValue="false"
                            fieldLabel="Member Exclusive:"
                            name="./isMemberExclusive"
                            type="radio"
                            xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <yes
                                    text="Yes"
                                    jcr:primaryType="nt:unstructured"
                                    value="true"/>
                            <no
                                    text="No"
                                    jcr:primaryType="nt:unstructured"
                                    value="false"/>
                        </options>
                    </isMemberExclusive>
                    <startDate
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Event start time: "
                            allowBlank="{Boolean}false"
                            dateFormat="l, F j, Y"
                            timeFormat="g:i a"
                            name="./startDate"
                            xtype="datetime"/>
                    <endDate
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Event end time: "
                            allowBlank="{Boolean}true"
                            dateFormat="l, F j, Y"
                            timeFormat="g:i a"
                            name="./endDate"
                            xtype="datetime"/>
                    <details
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Details:"
                            name="./details"
                            xtype="richtext"/>
                    <guestsMax
                            jcr:primaryType="cq:Widget"
                            fieldLabel="Max number of guests"
                            allowNegative="${Boolean}false"
                            name="./guestsMax"
                            xtype="numberfield"/>
                    <rsvp
                            jcr:primaryType="cq:Widget"
                            collapsed="false"
                            collapsible="false"
                            title="RSVP button"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <rsvpButtonText
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Button text:"
                                    name="./rsvpButtonText"
                                    xtype="textfield"/>
                            <rsvpButton
                                    jcr:primaryType="cq:Widget"
                                    defaultValue="true"
                                    fieldLabel="Button on/off:"
                                    name="./rsvpButton"
                                    type="radio"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <yes
                                            text="yes"
                                            jcr:primaryType="nt:unstructured"
                                            value="true"/>
                                    <no
                                            text="no"
                                            jcr:primaryType="nt:unstructured"
                                            value="false"/>
                                </options>
                            </rsvpButton>
                        </items>
                    </rsvp>
                    <askQuestion
                            jcr:primaryType="cq:Widget"
                            collapsed="false"
                            collapsible="false"
                            title="Ask question button"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <askQuestionButtonText
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Button text:"
                                    name="./askQuestionButtonText"
                                    xtype="textfield"/>
                            <askQuestionButton
                                    jcr:primaryType="cq:Widget"
                                    defaultValue="true"
                                    fieldLabel="Button on/off:"
                                    name="./askQuestionButton"
                                    type="radio"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <yes
                                            text="yes"
                                            jcr:primaryType="nt:unstructured"
                                            value="true"/>
                                    <no
                                            text="no"
                                            jcr:primaryType="nt:unstructured"
                                            value="false"/>
                                </options>
                            </askQuestionButton>
                        </items>
                    </askQuestion>
                    <customButtonProperties
                            jcr:primaryType="cq:Widget"
                            collapsed="false"
                            collapsible="false"
                            title="Custom Button"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <buttonText
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Button Text:"
                                    name="./buttonText"
                                    xtype="textfield"/>
                            <buttonLinkUrl
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Button Link URL:"
                                    name="./buttonLinkUrl"
                                    xtype="pathfield"/>
                            <buttonLinkTarget jcr:primaryType="cq:Widget"
                                            fieldLabel="Open: "
                                            defaultValue="false"
                                            name="./buttonLinkTarget"
                                            type="select"
                                            xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <self jcr:primaryType="nt:unstructured"
                                          text="current window"
                                          value="_self"/>
                                    <blank jcr:primaryType="nt:unstructured"
                                           text="new window"
                                           value="_blank"/>
                                </options>
                            </buttonLinkTarget>
                            <customButton
                                    jcr:primaryType="cq:Widget"
                                    defaultValue="false"
                                    fieldLabel="Button on/off:"
                                    name="./customButton"
                                    type="radio"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <yes
                                            text="yes"
                                            jcr:primaryType="nt:unstructured"
                                            value="true"/>
                                    <no
                                            text="no"
                                            jcr:primaryType="nt:unstructured"
                                            value="false"/>
                                </options>
                            </customButton>
                        </items>
                    </customButtonProperties>
                    <eventIsFull
                            jcr:primaryType="cq:Widget"
                            defaultValue="false"
                            fieldLabel="Event is full:"
                            name="./eventIsFull"
                            type="radio"
                            xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <yes
                                    text="Yes"
                                    jcr:primaryType="nt:unstructured"
                                    value="true"/>
                            <no
                                    text="No"
                                    jcr:primaryType="nt:unstructured"
                                    value="false"/>
                        </options>
                    </eventIsFull>
                </items>
            </settings>
        </items>
    </items>
</jcr:root>
