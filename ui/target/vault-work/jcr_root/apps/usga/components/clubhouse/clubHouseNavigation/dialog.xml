<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}660"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <logoDestination
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Logo Linked Page"
                        name="./logoDestination"
                        xtype="pathfield"/>
                <multifield
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./navLinks"
                        hideLabel="false"
                        fieldLabel="Navigation Links"
                        name="./navLinks"
                        xtype="custommultifield">
                    <fieldConfig jcr:primaryType="cq:WidgetCollection">
                        <linkLabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Link Label"
                                name="./linkLabel"
                                xtype="textfield"/>
                        <linkURL
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Link Destination"
                                name="./linkURL"
                                xtype="pathfield"/>
                        <showSubNavigation
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Show Sub Navigation"
                                defaultValue="no"
                                boxMaxWidth="{Long}200"
                                name="./showSubNavigation"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                            </options>
                        </showSubNavigation>
                        <newWindow
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open link in a new window"
                                defaultValue="no"
                                boxMaxWidth="{Long}200"
                                name="./newWindow"
                                type="select"
                                xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <yes
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                <no
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                            </options>
                        </newWindow>
                    </fieldConfig>
                </multifield>
            </items>
        </tab>
    </items>
</jcr:root>