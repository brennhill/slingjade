<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          width="{Long}800"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab
                jcr:primaryType="cq:Widget"
                hideMode="offsets"
                xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Module Title"
                        name="./title"
                        xtype="textfield"/>
                <multifield
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./boxes"
                        hideLabel="false"
                        fieldLabel="Boxes"
                        name="./boxes"
                        xtype="custommultifield">
                    <fieldConfig jcr:primaryType="cq:WidgetCollection">
                        <linkedPage
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Linked page"
                                name="./link"
                                xtype="pathfield"/>
                        <image
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Box Image"
                                name="./imgLink"
                                predicate="nosystem"
                                rootPath="/content/dam/usga"
                                width="{Long}50"
                                xtype="pathfield">
                            <treeRoot
                                jcr:primaryType="nt:unstructured"
                                name="content/dam/usga"
                                text="Media Assets"/>
                        </image>
                        <category
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Box category"
                                name="./category"
                                xtype="textfield"/>
                        <description
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Description"
                                name="./boxDescription"
                                xtype="textfield"/>
                    </fieldConfig>
                </multifield>

                <moreLinkText
                                jcr:primaryType="cq:Widget"
                                fieldLabel="'More link' text"
                                name="./moreLinkText"
                                xtype="textfield"/>
                <moreLink
                                jcr:primaryType="cq:Widget"
                                fieldLabel="'More link' page"
                                name="./moreLink"
                                xtype="pathfield"/>
                <moreLinkNewWindow
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Open 'More link' page in a new window"
                                defaultValue="no"
                                boxMaxWidth="{Long}200"
                                name="./moreLinkNewWindow"
                                type="select"
                                xtype="selection">
                   <options jcr:primaryType="cq:WidgetCollection">
                       <yes
                               jcr:primaryType="nt:unstructured"
                               text="Yes"
                               value="_blank"/>
                       <no
                               jcr:primaryType="nt:unstructured"
                               text="No"
                               value="_self"/>
                   </options>
               </moreLinkNewWindow>
            </items>
        </tab>
    </items>
</jcr:root>