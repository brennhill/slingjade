<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          height="400"
          stateful="false"
          xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <basic
                        jcr:primaryType="cq:Widget"
                        path="/apps/usga/pages/pageBase/tab_basic.infinity.json"
                        xtype="cqinclude"/>
                <usga_social_admin_settings
                        jcr:primaryType="cq:Panel"
                        title="USGA Social Admin Settings">
                    <items jcr:primaryType="cq:WidgetCollection">
                        <rootPage
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Path to root page: "
                                fieldDescription="*'/content/admin' by default. In this case the '/content/admin/social' page for social items will be created."
                                name="./rootPage"
                                xtype="pathfield"/>
                        <feeds
                                jcr:primaryType="cq:Widget"
                                collapsed="{Boolean}false"
                                collapsible="{Boolean}true"
                                title="Feeds"
                                xtype="dialogfieldset">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <aggregatedFeed
                                        jcr:primaryType="cq:Widget"
                                        fieldLabel="Path to aggregated feed: "
                                        fieldDescription="*JSON feed from 'Turbine'"
                                        name="./aggregatedFeed"
                                        xtype="textfield"/>
                            </items>
                        </feeds>
                    </items>
                </usga_social_admin_settings>
            </items>
        </tabs>
    </items>
</jcr:root>
