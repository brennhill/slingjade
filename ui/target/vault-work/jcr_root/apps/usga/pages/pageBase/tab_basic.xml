<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Panel"
    title="Basic">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <tags
                    jcr:primaryType="cq:Widget"
                    cls="cq-propsdialog-tags"
                    fieldLabel="Tags/Keywords"
                    name="./cq:tags"
                    namespaces="[usga-category,usga-sub-category,usga-tags]"
                    xtype="tags"/>
            </items>
        </basic>
        <more_titles
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="More Titles and Description"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <pagetitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Page Title"
                    name="./pageTitle"
                    xtype="textfield"/>
                <subtitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Subtitle"
                    name="./subtitle"
                    xtype="textfield"/>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    name="./jcr:description"
                    xtype="textarea"/>
            </items>
        </more_titles>
        <onofftime
            jcr:primaryType="cq:Widget"
            cls="cq-propsdialog-set-onofftime"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            hideMode="offsets"
            title="On/Off Time"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <ontime
                    jcr:primaryType="cq:Widget"
                    ctCls="cq-propsdialog-ontime"
                    fieldLabel="On Time"
                    name="./onTime"
                    xtype="datetime"/>
                <offtime
                    jcr:primaryType="cq:Widget"
                    ctCls="cq-propsdialog-offtime"
                    fieldLabel="Off Time"
                    name="./offTime"
                    xtype="datetime"/>
                <onTimeHint
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./onTime@TypeHint"
                    value="Date"
                    xtype="hidden"/>
                <offTimeHint
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./offTime@TypeHint"
                    value="Date"
                    xtype="hidden"/>
            </items>
        </onofftime>
        <vanity
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Vanity URL"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <vanitylinks
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Vanity URLs"
                        name="./vanitylinks"
                        xtype="multifield">
                    <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <shortner
                                    jcr:primaryType="cq:Widget"
                                    width="90%"
                                    fieldLabel="Shortner: "
                                    key="shortner"
                                    xtype="textfield"/>
                            <params
                                    jcr:primaryType="cq:Widget"
                                    width="90%"
                                    fieldLabel="Params: "
                                    key="params"
                                    xtype="textfield"/>
                        </items>
                    </fieldConfig>
                </vanitylinks>
            </items>
        </vanity>
    </items>
</jcr:root>
